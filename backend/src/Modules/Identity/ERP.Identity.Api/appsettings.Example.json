{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast256BitsLong12345678901234567890",
    "Issuer": "ERP.Identity.Api",
    "Audience": "ERP.Api",
    "ExpirationMinutes": "60",
    "RefreshTokenExpirationDays": "7"
  },
  "RateLimit": {
    "Login": {
      "MaxRequests": "5",
      "WindowMinutes": "15",
      "BlockMinutes": "30",
      "EnableAutoBlock": "true"
    },
    "TokenRefresh": {
      "MaxRequests": "10",
      "WindowMinutes": "5",
      "BlockMinutes": "15",
      "EnableAutoBlock": "true"
    },
    "PasswordReset": {
      "MaxRequests": "3",
      "WindowHours": "1",
      "BlockHours": "24",
      "EnableAutoBlock": "true"
    },
    "Registration": {
      "MaxRequests": "3",
      "WindowHours": "1",
      "BlockHours": "6",
      "EnableAutoBlock": "true"
    },
    "PermissionCheck": {
      "MaxRequests": "100",
      "WindowMinutes": "1",
      "BlockMinutes": "5",
      "EnableAutoBlock": "false"
    },
    "ApiCall": {
      "MaxRequests": "1000",
      "WindowHours": "1",
      "BlockMinutes": "15",
      "EnableAutoBlock": "false"
    },
    "DataAccess": {
      "MaxRequests": "500",
      "WindowHours": "1",
      "BlockMinutes": "30",
      "EnableAutoBlock": "false"
    }
  }
}
