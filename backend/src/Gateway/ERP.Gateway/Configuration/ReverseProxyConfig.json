{
  "Routes": {
    "users-route": {
      "Match": {
        "Path": "/api/v1/users"
      },
      "ClusterId": "erp-api-cluster",
      "Metadata": {
        "Description": "User Management Services - exact match"
      }
    },
    "users-route-with-params": {
      "Match": {
        "Path": "/api/v1/users/{**catch-all}"
      },
      "ClusterId": "erp-api-cluster",
      "Metadata": {
        "Description": "User Management Services - with path parameters"
      }
    },
    "identity-route": {
      "Match": {
        "Path": "/api/v1/identity/{**catch-all}"
      },
      "ClusterId": "identity-cluster",
      "Metadata": {
        "Description": "Identity and Authentication Services"
      }
    },
    "useraccess-route": {
      "Match": {
        "Path": "/api/v1/useraccess/{**catch-all}"
      },
      "ClusterId": "useraccess-cluster",
      "Metadata": {
        "Description": "User Access Management Services"
      }
    },
    "masters-route": {
      "Match": {
        "Path": "/api/v1/masters/{**catch-all}"
      },
      "ClusterId": "masters-cluster",
      "Metadata": {
        "Description": "Master Data Management Services"
      }
    },
    "crm-route": {
      "Match": {
        "Path": "/api/v1/crm/{**catch-all}"
      },
      "ClusterId": "crm-cluster",
      "Metadata": {
        "Description": "Customer Relationship Management Services"
      }
    }
  },
  "Clusters": {
    "erp-api-cluster": {
      "Destinations": {
        "erp-api-destination": {
          "Address": "http://localhost:5000/",
          "Health": "http://localhost:5000/health"
        }
      },
      "HttpClient": {
        "SslProtocols": "Tls12|Tls13"
      },
      "HealthCheck": {
        "Active": {
          "Enabled": true,
          "Interval": "30s",
          "Timeout": "5s",
          "Policy": "ConsecutiveFailures",
          "Path": "/health"
        }
      }
    },
    "identity-cluster": {
      "Destinations": {
        "identity-destination": {
          "Address": "https://localhost:7101/",
