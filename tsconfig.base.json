{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@lt-india-erp/*": ["libs/*/src/index.ts"],
      "@lt-india-erp/shared-data-access": ["libs/shared-data-access/src/index.ts"],
      "@lt-india-erp/design-system": ["libs/design-system/src/index.ts"],
      "@lt-india-erp/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@lt-india-erp/data-contracts": ["libs/data-contracts/src/index.ts"],
      "@lt-india-erp/feature-identity": ["libs/feature-identity/src/index.ts"],
      "@lt-india-erp/feature-masters": ["libs/feature-masters/src/index.ts"],
      "@lt-india-erp/feature-crm": ["libs/feature-crm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
